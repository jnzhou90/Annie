<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/selector_list_item"
        android:orientation="vertical"
        android:padding="8dp" >

        <!-- 第一行 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homefragment_iv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/homefragment_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有缘千里来相会"
                    android:textColor="@color/txt_title"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/homefragment_rg_star"
                    style="@android:style/Widget.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar"
                    android:rating="3" 
                    android:isIndicator="true"/>

                <TextView
                    android:id="@+id/homefragment_tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.7M"
                    android:textColor="@color/txt_small"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- 线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#222b2b2b" />
        
        <!-- 描述 -->
        <TextView
            android:id="@+id/homefragment_tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Annie"
            android:textColor="@color/txt_small"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>