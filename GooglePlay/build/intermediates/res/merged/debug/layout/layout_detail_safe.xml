<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_item_bg_normal"
    android:orientation="vertical"
    android:padding="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_image1"
            android:layout_width="55dp"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/iv_image2"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/iv_image1" />

        <ImageView
            android:id="@+id/iv_image3"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/iv_image2" />

        <ImageView
            android:id="@+id/iv_safe_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_down" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_safe_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/ll_safe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_safe_icon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_safe_des1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="要要要切克闹，煎饼果子来一套，加3个油条!!!!加3个油条!!!!"
            android:textColor="@color/txt_small"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_safe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_safe_icon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_safe_des2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="要要要切克闹，煎饼果子来一套，加3个油条!!!!加3个油条!!!!"
            android:textColor="@color/txt_small"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_safe3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_safe_icon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_safe_des3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="要要要切克闹，煎饼果子来一套，加3个油条!!!!加3个油条!!!!"
            android:textColor="@color/txt_small"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>