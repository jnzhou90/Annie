<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_rl_haha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_red_bg" >

    <TextView
        android:id="@+id/basepager_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/basepager_ib_menuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:onClick="toggle"
        android:src="@drawable/img_menu" />
    
   <ImageButton
        android:id="@+id/basepager_ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/back"
        android:visibility="gone"
        android:onClick="back"/>

    <ImageButton
        android:id="@+id/basepager_ib_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/icon_share"
        android:visibility="gone" 
        android:onClick="share"/>

    <ImageButton
        android:id="@+id/basepager_ib_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/basepager_ib_share"
        android:background="@drawable/icon_textsize"
        android:visibility="gone"
        android:onClick="size" />
     <ImageButton
        android:id="@+id/basepager_ib_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/icon_pic_grid_type"
        android:visibility="gone" />

</RelativeLayout>
